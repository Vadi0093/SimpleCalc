<Window x:Class="Project004_SimpleCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project004_SimpleCalc"
        mc:Ignorable="d"
        Title="SimpleCalc" Height="480" Width="300"
        WindowStartupLocation="CenterScreen"
        Background="#1B1B1D"
        Foreground="#FFFFFF">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#2A2A2D" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="20" />
        </Style>

        <SolidColorBrush x:Key="Operators" Color="#1F8E3C" />
        <SolidColorBrush x:Key="Functional" Color="#4E4E4E" />
        <SolidColorBrush x:Key="Equal" Color="YellowGreen" />
        <SolidColorBrush x:Key="Clear" Color="Red" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock 
            x:Name="PreviousNumberDisplay"
            Text=""
            Grid.ColumnSpan="4"
            VerticalAlignment="Top"
            Margin="10"
            Opacity="0.6"
            FontSize="20"
            TextAlignment="right"
            />

        <TextBlock
            x:Name="NumberDisplay"
            Text="0"
            Grid.ColumnSpan="4"
            VerticalAlignment="Center"
            Margin="4"
            FontSize="30"
            TextAlignment="Right"
            />

        <TextBlock
            x:Name="OperationTypeDisplay"
            Text=""
            Grid.ColumnSpan="4"
            VerticalAlignment="Bottom"
            Margin="4"
            FontSize="20"
            TextAlignment="Right"
            />

        <Button Click="BackspaceClicked" Content="⌫" Grid.ColumnSpan="4" Grid.Row="0" Background="Transparent" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10"/>
        <Button Click="ClearClicked" Content="Clear" Grid.Column="0" Grid.Row="1" Background="{StaticResource Clear}"/>
        <Button Click="PercentClicked" Content="%" Grid.Column="1" Grid.Row="1" Background="{StaticResource Functional}"/>
        <Button Click="ReverseNumberClicked" Content="-\+" Grid.Column="2" Grid.Row="1" Background="{StaticResource Functional}"/>
        <Button Click="OperatorClicked" Content="/" Grid.Column="3" Grid.Row="1" Background="{StaticResource Operators}"/>
        <Button Click="NumberClicked" Content="7" Grid.Column="0" Grid.Row="2"/>
        <Button Click="NumberClicked" Content="8" Grid.Column="1" Grid.Row="2"/>
        <Button Click="NumberClicked" Content="9" Grid.Column="2" Grid.Row="2"/>
        <Button Click="OperatorClicked" Content="*" Grid.Column="3" Grid.Row="2" Background="{StaticResource Operators}"/>
        <Button Click="NumberClicked" Content="4" Grid.Column="0" Grid.Row="3"/>
        <Button Click="NumberClicked" Content="5" Grid.Column="1" Grid.Row="3"/>
        <Button Click="NumberClicked" Content="6" Grid.Column="2" Grid.Row="3"/>
        <Button Click="OperatorClicked" Content="-" Grid.Column="3" Grid.Row="3" Background="{StaticResource Operators}"/>
        <Button Click="NumberClicked" Content="1" Grid.Column="0" Grid.Row="4"/>
        <Button Click="NumberClicked" Content="2" Grid.Column="1" Grid.Row="4"/>
        <Button Click="NumberClicked" Content="3" Grid.Column="2" Grid.Row="4"/>
        <Button Click="OperatorClicked" Content="+" Grid.Column="3" Grid.Row="4" Background="{StaticResource Operators}"/>
        <Button Click="NumberClicked" Content="0" Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2"/>
        <Button Click="PeriodClicked" Content="." Grid.Column="2" Grid.Row="5" />
        <Button Click="EqualClicked" Content="=" Grid.Column="3" Grid.Row="5" Background="{StaticResource Equal}"/>
    </Grid>
</Window>